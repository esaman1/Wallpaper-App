<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context="bestwallpaper.hdgb.wallpapers.backgrounds.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/stickerRel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back1"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentLeft="true"
                android:layout_margin="@dimen/_15sdp"
                android:src="@drawable/ic_back__2_" />

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Settings"
                android:textColor="@color/dayNighttext"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/stickerRel"
            android:layout_marginHorizontal="@dimen/_20sdp">

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto change wallpapers"
                android:textColor="@color/dayNighttext"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t3"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t2"
                android:maxLines="2"
                android:text="Change wallpaper periodically,based on the conditions below."
                android:textSize="@dimen/_10sdp" />

            <Switch
                android:id="@+id/wSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:checked="true"
                android:theme="@style/SCBSwitch" />

            <ImageView
                android:id="@+id/t4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t3"
                android:layout_marginVertical="@dimen/_15sdp"
                android:src="@drawable/ic_line_93" />

            <TextView
                android:id="@+id/t5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t4"
                android:text="Conditions"
                android:textColor="@color/dayNighttext"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/t6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t5"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="On Wi-Fi"
                android:textColor="@color/dayNighttext" />

            <TextView
                android:id="@+id/t7"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t6"
                android:text="Device must be connected to Wi-Fi network." />

            <CheckBox
                android:id="@+id/wifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t5"
                android:layout_alignParentRight="true" />

            <TextView
                android:id="@+id/t8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t7"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Charging"
                android:textColor="@color/dayNighttext" />

            <TextView
                android:id="@+id/t9"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t8"
                android:text="Device must be connected to a power source." />

            <CheckBox
                android:id="@+id/charging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t7"
                android:layout_alignParentRight="true" />

            <ImageView
                android:id="@+id/t10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t9"
                android:layout_marginVertical="@dimen/_15sdp"
                android:src="@drawable/ic_line_93" />

            <TextView
                android:id="@+id/t11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t10"
                android:text="Options"
                android:textColor="@color/dayNighttext"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t11"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interval"
                    android:textColor="@color/dayNighttext" />

                <TextView
                    android:id="@+id/t13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Each Wallpaper will last a minimum of 3 hours." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Screen"
                    android:textColor="@color/dayNighttext" />

                <TextView
                    android:id="@+id/t15"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t14"
                    android:text="Home and lock screen" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l2"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Source"
                    android:textColor="@color/dayNighttext" />

                <TextView
                    android:id="@+id/t17"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t16"
                    android:text="Favourite Wallpapers" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l3"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Theme"
                    android:textColor="@color/dayNighttext" />

                <TextView
                    android:id="@+id/t19"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t18"
                    android:text="Light" />
            </LinearLayout>

            <ImageView
                android:id="@+id/t20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l4"
                android:layout_marginVertical="@dimen/_15sdp"
                android:src="@drawable/ic_line_93" />

            <TextView
                android:id="@+id/t21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/t20"
                android:text="About"
                android:textColor="@color/dayNighttext"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/t21"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t22"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:text="Recommend"
                    android:textColor="@color/dayNighttext" />

                <TextView
                    android:id="@+id/t24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share this app with friends and family." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t25"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Rate App"
                    android:textColor="@color/dayNighttext" />

                <TextView
                    android:id="@+id/t26"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Leave a review on the Google Play Store." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/t27"
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/l6"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Send Feedback"
                    android:textColor="@color/dayNighttext" />

                <TextView
                    android:id="@+id/t28"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/t27"
                    android:text="Tell me what you think, suggest ideas,bug reports and improvements" />
            </LinearLayout>

            <TextView
                android:id="@+id/t29"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/l7"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Privacy Policy"
                android:textColor="@color/dayNighttext" />

            <TextView
                android:id="@+id/t30"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t29"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="App Version"
                android:textColor="@color/dayNighttext" />

            <TextView
                android:id="@+id/t31"
                android:layout_width="@dimen/_180sdp"
                android:layout_height="wrap_content"
                android:layout_below="@id/t30"
                android:layout_marginBottom="@dimen/_20sdp" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>